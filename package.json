{
  "name": "aqua-app-template",
  "version": "0.0.1",
  "description": "Project template for developing AquaApp applications",
  "author": "Degensoft Ltd.",
  "license": "SEE LICENSE IN LICENSE",
  "scripts": {
    "build": "hardhat compile",
    "test": "hardhat test",
    "deploy": "hardhat deploy --network",
    "deploy:localhost": "hardhat deploy --network localhost",
    "deploy:sepolia": "hardhat deploy --network sepolia",
    "deploy:aave:sepolia": "hardhat deploy --network sepolia --tags aave",
    "test:sepolia": "hardhat run scripts/test-flashloan-sepolia.ts --network sepolia",
    "test:aave:sepolia": "ts-node scripts/test-aave-simple.ts",
    "verify:sepolia": "hardhat run scripts/verify-contracts.ts --network sepolia",
    "check:sepolia": "hardhat run scripts/check-balance.ts --network sepolia",
    "clean": "rimraf artifacts cache coverage contracts/hardhat-dependency-compiler deployments typechain-types"
  },
  "dependencies": {
    "@1inch/aqua": "https://github.com/1inch/aqua.git",
    "@1inch/solidity-utils": "^6.8.0",
    "@openzeppelin/contracts": "^5.4.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.9",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.14",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^24.7.2",
    "chai": "^4.3.8",
    "dotenv": "^16.4.5",
    "ethers": "^6.15.0",
    "hardhat": "^2.22.15",
    "hardhat-dependency-compiler": "^1.2.1",
    "hardhat-deploy": "^1.0.4",
    "hardhat-tracer": "^3.4.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.9.3"
  }
}
